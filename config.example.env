# ========================================
# ManageBac Assignment Checker Configuration
# ManageBac作业检查器配置文件
# ========================================

# 🔐 ManageBac Credentials | ManageBac凭据
# ========================================
MANAGEBAC_EMAIL=your_email@example.com
MANAGEBAC_PASSWORD=your_secure_password
MANAGEBAC_URL=https://your-school.managebac.com

# 📊 Report Settings | 报告设置
# ========================================
# Available formats: html, markdown, json, console
# 可用格式: html, markdown, json, console
REPORT_FORMAT=html

# Output directory for reports | 报告输出目录
OUTPUT_DIR=reports

# Fetch detailed assignment information | 获取详细作业信息
FETCH_DETAILS=true

# Limit for detailed assignments (0 = no limit) | 详细作业限制数量 (0 = 无限制)
DETAILS_LIMIT=50

# 📧 Email Notification Settings | 邮件通知设置
# ========================================
# Enable email notifications | 启用邮件通知
ENABLE_EMAIL_NOTIFICATIONS=false

# SMTP Configuration | SMTP配置
SMTP_SERVER=smtp.gmail.com
SMTP_PORT=587
SMTP_USERNAME=your_email@gmail.com
SMTP_PASSWORD=your_app_password
SMTP_USE_TLS=true

# Notification recipients (comma-separated) | 通知接收者 (逗号分隔)
NOTIFICATION_RECIPIENTS=student@example.com,parent@example.com

# 🔧 Browser Settings | 浏览器设置
# ========================================
# Run browser in headless mode | 无头模式运行浏览器
HEADLESS=true

# Browser timeout in milliseconds | 浏览器超时时间 (毫秒)
BROWSER_TIMEOUT=30000

# 🐛 Debug Settings | 调试设置
# ========================================
# Enable debug logging | 启用调试日志
DEBUG=false

# Log level: DEBUG, INFO, WARNING, ERROR | 日志级别
LOG_LEVEL=INFO

# Log file path | 日志文件路径
LOG_FILE=logs/managebac_checker.log

# 🎯 Filter Settings | 过滤设置
# ========================================
# Only show overdue assignments | 只显示逾期作业
SHOW_OVERDUE_ONLY=false

# Only show high priority assignments | 只显示高优先级作业
SHOW_HIGH_PRIORITY_ONLY=false

# Minimum days before due date to show | 显示到期前的最少天数
MIN_DAYS_BEFORE_DUE=0

# 🎨 UI Settings | 界面设置
# ========================================
# Theme for HTML reports: light, dark, auto | HTML报告主题
HTML_THEME=auto

# Include charts in reports | 在报告中包含图表
INCLUDE_CHARTS=true

# Chart color scheme: default, colorful, monochrome | 图表配色方案
CHART_COLOR_SCHEME=default
