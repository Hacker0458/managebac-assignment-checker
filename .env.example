# ManageBac Assignment Checker Configuration
# Copy this file to .env and fill in your actual credentials

# Required: ManageBac Login Credentials
MANAGEBAC_EMAIL=your_email@example.com
MANAGEBAC_PASSWORD=your_password
MANAGEBAC_URL=https://shtcs.managebac.cn

# Optional: Browser Configuration
HEADLESS=true
TIMEOUT=30000
DEBUG=false

# Optional: Report Configuration
REPORT_FORMAT=console,html,json
OUTPUT_DIR=./reports

# Optional: Assignment Analysis
DAYS_AHEAD=7
PRIORITY_KEYWORDS=exam,test,project,essay
FETCH_DETAILS=false
DETAILS_LIMIT=10

# Optional: Email Notifications
ENABLE_NOTIFICATIONS=false
SMTP_SERVER=smtp.gmail.com
SMTP_PORT=587
EMAIL_USER=your_email@gmail.com
EMAIL_PASSWORD=your_app_password
NOTIFICATION_EMAIL=your_notification_email@example.com

# Optional: Advanced Settings
MAX_RETRIES=3
RETRY_DELAY=2000
BROWSER_ARGS=--no-sandbox,--disable-dev-shm-usage
